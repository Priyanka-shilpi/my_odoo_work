<odoo>
    <record id="view_fuel_entry_tree" model="ir.ui.view">
        <field name="name">fuel.entry.tree</field>
        <field name="model">fuel.entry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="fuel_type"/>
                <field name="quantity"/>
                <field name="source"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>

    <record id="view_fuel_entry_form" model="ir.ui.view">
        <field name="name">fuel.entry.form</field>
        <field name="model">fuel.entry</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_journal_entry"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-book">
                            <div>
                                <span class="o_stat_text">Journal Entry</span>
                            </div>
                        </button>
                    </div>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                        <button name="action_post" string="Post Entry" type="object"
                                class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button name="reset_to_draft" string="Reset to Draft" type="object"
                                class="btn-primary"
                                invisible="state != 'posted'"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="date"/>
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                            <field name="project_id"/>
                            <field name="analytic_account_id"/>
                            <field name="fuel_type"/>
                            <field name="unit_price"/>
                            <field name="journal_id" invisible="1"/>
                            <field name="quantity"/>
                            <field name="source"/>
<!--                            <field name="state"/>-->
                        </group>
<!--                        <group>-->
<!--                            <field name="move_id" readonly="1" context="{'form_view_ref': 'account.view_move_form'}"-->
<!--                                   options="{'no_create': True}"/>-->
<!--                        </group>-->
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fuel_entries" model="ir.actions.act_window">
        <field name="name">Fuel Entries</field>
        <field name="res_model">fuel.entry</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_fuel_management_root" name="Fuel Management" parent="fleet.menu_root"/>
    <menuitem id="menu_fuel_entries" name="Fuel Entries" parent="menu_fuel_management_root"
              action="action_fuel_entries"/>
</odoo>
