<odoo>
    <!-- Server Action to Generate Fuel Reports -->
    <record id="action_generate_fuel_reports" model="ir.actions.server">
        <field name="name">Generate Monthly Fuel Reports</field>
        <field name="model_id" ref="model_fuel_report"/>
        <field name="binding_model_id" ref="model_fuel_report"/>
        <field name="state">code</field>
        <field name="code">model.generate_monthly_reports()</field>
    </record>
</odoo>
