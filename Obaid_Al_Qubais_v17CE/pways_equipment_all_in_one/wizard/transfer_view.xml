<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sallocation_return_transfer_wizard_form_view" model="ir.ui.view">
        <field name="name">Allocation Return Transfer Wizard</field>
        <field name="model">allocation.return.transfer.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="employee_id"/>
                    </group>
                </group>
                <footer>
                    <button class="oe_highlight" name="action_create_transfer" string="Transfer" type="object"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_allocation_return_transfer_wizard" model="ir.actions.act_window">
        <field name="name">Transfer</field>
        <field name="res_model">allocation.return.transfer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record> 
</odoo>
