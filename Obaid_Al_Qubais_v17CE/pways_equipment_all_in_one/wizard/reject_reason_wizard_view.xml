<odoo>
    <record id="view_allocation_reject_wizard_form" model="ir.ui.view">
        <field name="name">allocation.reject.wizard.form</field>
        <field name="model">allocation.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Allocation">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="action_submit_reason" string="Submit" type="object" class="btn btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>