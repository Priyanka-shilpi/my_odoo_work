<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="work_schedule_tree" model="ir.ui.view">
        <field name="name">work.schedule.view.tree</field>
        <field name="model">work.schedule</field>
        <field name="arch" type="xml">
            <tree string="Recurring Work Schedule">
                <field name="name"/>
                <field name="days"/>
            </tree>
        </field>
    </record>

    <record id="work_schedule_form" model="ir.ui.view">
        <field name="name">work.schedule.view.form</field>
        <field name="model">work.schedule</field>
        <field name="arch" type="xml">
            <form string="Recurring Work Schedule">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder='Recurring type' required='1'/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="days"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_work_schedule" model="ir.actions.act_window">
        <field name="name">Recurring Work Schedule</field>
        <field name="res_model">work.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_work_schedule"
        name="Recurring Work Schedule"
        parent="maintenance.menu_maintenance_configuration"
        action="action_work_schedule"
        sequence="200"/>
</odoo>
