<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="external_employees_form_view" model="ir.ui.view">
        <field name="name">external.employees.form.view</field>
        <field name="model">external.employee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Employee Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="id_proof"/>
                        </group>
                        <group/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="external_employees_tree_view" model="ir.ui.view">
        <field name="name">external.employees.tree.view</field>
        <field name="model">external.employee</field>
        <field name="arch" type="xml">
            <tree string="External Employees">
                <field name="name"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="action_external_employees" model="ir.actions.act_window">
        <field name="name">External Employees</field>
        <field name="res_model">external.employee</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_external_employees" name="External Employees" parent="hr.menu_hr_employee_payroll"
              sequence="3" action="pways_equipment_all_in_one.action_external_employees"/>
</odoo>