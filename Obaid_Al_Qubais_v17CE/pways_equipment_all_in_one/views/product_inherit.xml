<odoo>
    <record id="equipment_product_view_form_inherit" model="ir.ui.view">
        <field name="name">equipment.product.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline_block">
                    <field name="equipment"/>
                    <label for="equipment"/>
                </span>
            </xpath>
            <xpath expr="//form/sheet/notebook/page[2]" position="after">
            <page string="Equipment" invisible="equipment == False" >
                <group>
                    <group>
                        <field name="maintenance_id" invisible="equipment == False" required="equipment == True"/>
                        <field name="category_id" invisible="equipment == False" required="equipment == True"/>
                        <field name="technician_id" invisible="equipment == False" required="equipment == True"/>
                        <field name="equipment_assign_to" invisible="equipment == False" required="equipment == True"/>

                    </group>
                </group>
            </page>
            </xpath>
        </field>
    </record>
    <record id="equipment_product_product_view_form_inherit" model="ir.ui.view">
        <field name="name">equipment.product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline_block">
                    <field name="equipment"/>
                    <label for="equipment"/>
                </span>
            </xpath>
            <xpath expr="//form/sheet/notebook/page[2]" position="after">
            <page string="Equipment" invisible="equipment == False" >
                <group>
                    <group>
                        <field name="maintenance_id" invisible="equipment == False" required="equipment == True"/>
                        <field name="category_id" invisible="equipment == False" required="equipment == True"/>
                        <field name="technician_id" invisible="equipment == False" required="equipment == True" />
                        <field name="equipment_assign_to" invisible="equipment == False" required="equipment == True"/>
                    </group>
                </group>
            </page>
            </xpath>
        </field>
    </record>
    <record id="view_picking_is_equipment_form" model="ir.ui.view">
        <field name="name">picking.equipment.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="allocation_id" invisible="1"/>
            </xpath>
        </field>
    </record>
    <record id="view_project_task_equipment_form" model="ir.ui.view">
        <field name="name">project.task.equipment.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="maintenance_id"/>
            </xpath>
        </field>
    </record>
    <record id="view_stock_warehouse_equipment_form" model="ir.ui.view">
        <field name="name">stock.warehouse.equipment.form</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='out_type_id']" position="after">
                <field name="equipment_location_id"/>
            </xpath>
        </field>
    </record>
</odoo>