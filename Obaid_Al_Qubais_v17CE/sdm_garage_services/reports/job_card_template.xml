<odoo>
    <template id="report_job_card_template">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="doc">
                <main class="o_report_layout_standard">
                    <div class="page">
                        <h2>Job Card - <span t-esc="doc.name"/></h2>
                        <p><strong>Asset:</strong> <t t-esc="doc.asset_id.name"/></p>
                        <p><strong>Job Type:</strong> <t t-esc="doc.job_type_id"/></p>
                        <p><strong>KM:</strong> <t t-esc="doc.current_km"/> |
                           <strong>Hours:</strong> <t t-esc="doc.hours"/></p>
                        <p><strong>Time In:</strong> <t t-esc="doc.time_in"/> |
                           <strong>Time Out:</strong> <t t-esc="doc.time_out"/></p>

                        <h3>Wrench Time</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr><th>Item</th><th>Mechanic</th><th>Date</th><th>Start</th><th>Finish</th></tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.wrench_time_ids" t-as="line">
                                    <td><t t-esc="line.item"/></td>
                                    <td><t t-esc="line.mechanic_id.name"/></td>
                                    <td><t t-esc="line.date"/></td>
                                    <td><t t-esc="line.start_time"/></td>
                                    <td><t t-esc="line.finish_time"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <h3>Parts Requested</h3>
                        <table class="table table-sm">
                            <thead><tr><th>Part No</th><th>Description</th><th>Qty</th></tr></thead>
                            <tbody>
                                <tr t-foreach="doc.part_request_ids" t-as="part">
                                    <td><t t-esc="part.part_no"/></td>
                                    <td><t t-esc="part.description"/></td>
                                    <td><t t-esc="part.quantity"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <h3>Sublet Work</h3>
                        <table class="table table-sm">
                            <thead><tr><th>Date</th><th>Outlet</th><th>Description</th><th>Time</th></tr></thead>
                            <tbody>
                                <tr t-foreach="doc.sublet_work_ids" t-as="sub">
                                    <td><t t-esc="sub.date"/></td>
                                    <td><t t-esc="sub.outlet"/></td>
                                    <td><t t-esc="sub.component_description"/></td>
                                    <td><t t-esc="sub.completion_time"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <p><strong>Road Test Done:</strong> <t t-esc="'Yes' if doc.road_test_done else 'No'"/></p>
                    </div>
                </main>
            </t>
        </t>
    </template>
</odoo>
