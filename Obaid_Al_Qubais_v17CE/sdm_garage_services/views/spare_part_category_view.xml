<odoo>
    <!-- Action -->
    <record id="action_spare_part_category" model="ir.actions.act_window">
        <field name="name">Spare Part Categories</field>
        <field name="res_model">spare.part.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View -->
    <record id="view_spare_part_category_tree" model="ir.ui.view">
        <field name="name">spare.part.category.tree</field>
        <field name="model">spare.part.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_spare_part_category_form" model="ir.ui.view">
        <field name="name">spare.part.category.form</field>
        <field name="model">spare.part.category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>
    <menuitem id="menu_spare_part_category" name="Spare Part Categories"
              parent="fleet.fleet_configuration"
              action="action_spare_part_category"
              sequence="50"
    />
</odoo>