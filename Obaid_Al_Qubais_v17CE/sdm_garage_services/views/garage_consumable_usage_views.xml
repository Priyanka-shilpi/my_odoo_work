<odoo>
    <record id="view_garage_consumable_usage_form" model="ir.ui.view">
        <field name="name">garage.consumable.usage.form</field>
        <field name="model">garage.consumable.usage</field>
        <field name="arch" type="xml">
            <form string="Consumable Usage">
                <sheet>
                    <group>
                        <field name="vehicle_id"/>
                        <field name="usage_date"/>
                        <field name="item_id"/>
                        <field name="quantity"/>
                        <field name="vendor_id"/>
                        <field name="usage_reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_garage_consumable_usage_tree" model="ir.ui.view">
        <field name="name">garage.consumable.usage.tree</field>
        <field name="model">garage.consumable.usage</field>
        <field name="arch" type="xml">
            <tree string="Consumables Usage">
                <field name="vehicle_id"/>
                <field name="usage_date"/>
                <field name="item_id"/>
                <field name="quantity"/>
                <field name="vendor_id"/>
            </tree>
        </field>
    </record>

    <record id="view_garage_consumable_report_tree" model="ir.ui.view">
        <field name="name">garage.consumable.report.tree</field>
        <field name="model">garage.consumable.report</field>
        <field name="arch" type="xml">
            <tree string="Monthly Consumption Report">
                <field name="vehicle_id"/>
                <field name="item_id"/>
                <field name="total_quantity"/>
                <field name="month"/>
            </tree>
        </field>
    </record>
</odoo>
