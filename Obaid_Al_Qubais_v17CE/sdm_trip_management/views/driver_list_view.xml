<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree View -->
    <record id="view_driver_list_tree" model="ir.ui.view">
        <field name="name">driver.list.tree</field>
        <field name="model">driver.list</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_driver_list_form" model="ir.ui.view">
        <field name="name">driver.list.form</field>
        <field name="model">driver.list</field>
        <field name="arch" type="xml">
            <form string="Driver">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_driver_list" model="ir.actions.act_window">
        <field name="name">Drivers</field>
        <field name="res_model">driver.list</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add new drivers here.
            </p>
        </field>
    </record>

    <!-- Menu Action-->
    <menuitem id="menu_driver_list"
              name="Driver Selection"
              parent="fleet.fleet_configuration"
              sequence="100"
              action="action_driver_list"/>
</odoo>