<odoo>
    <record id="view_hr_employee_form_inherit_driver" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.driver</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group string="Driver Info">
                    <field name="is_driver"/>
                    <field name="is_mechanic"/>
                    <field name="license_type"/>
                    <field name="license_number"/>
                    <field name="license_expiry_date"/>
                    <field name="license_expired" readonly="1"/>
                    <field name="allocation_status"/>
                    <field name="vehicle_id"/>
                    <field name="project_id"/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_driver_allocation_tree" model="ir.ui.view">
        <field name="name">hr.employee.driver.allocation.tree</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <tree string="Driver Allocation Status">
                <field name="name"/>
                <field name="work_email"/>
                <field name="allocation_status"/>
                <field name="project_id"/>
                <field name="vehicle_id"/>
            </tree>
        </field>
    </record>
    <record id="action_driver_allocation_report" model="ir.actions.act_window">
        <field name="name">Driver Allocation Report</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('allocation_status', '!=', False)]</field>
    </record>

</odoo>
