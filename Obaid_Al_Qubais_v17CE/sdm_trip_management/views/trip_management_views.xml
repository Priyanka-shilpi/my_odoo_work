<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree View -->
    <record id="view_trip_management_tree" model="ir.ui.view">
        <field name="name">trip.management.tree</field>
        <field name="model">trip.management</field>
        <field name="arch" type="xml">
            <tree string="Trip Management">
                <field name="reference"/>
                <field name="plate_id"/>
                <field name="driver_id"/>
                <field name="project_id"/>
                <field name="trip_type"/>
                <!--                <field name="start_time"/>-->
                <!--                <field name="end_time"/>-->
            </tree>
        </field>
    </record>

    <record id="view_trip_management_form" model="ir.ui.view">
        <field name="name">trip.management.form</field>
        <field name="model">trip.management</field>
        <field name="arch" type="xml">
            <form string="Trip Management">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="active,completed"/>
                    <button name="action_generate_invoice" type="object" string="Generate Invoice" class="btn-primary"
                            invisible="state != 'completed'"/>
                    <button name="action_running" type="object" string="Run" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_completed" type="object" string="completed" class="btn-primary"
                            invisible="state != 'running'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" class="oe_inline" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="plate_id"/>
                            <field name="driver_id"/>
                            <field name="project_id"/>
                            <field name="trip_type" widget="radio" options="{'horizontal': true}"/>

                        </group>
                        <group name="trip_details">
                            <field name="start_location"/>
                            <field name="destination"/>
                            <field name="start_datetime"/>
                            <field name="end_datetime"/>
                            <!--                            <field name="start_time"/>-->
                            <!--                            <field name="end_time"/>-->
                        </group>
                    </group>

                    <notebook>
                        <page string="Charges">
                            <field name="charge_ids">
                                <tree editable="bottom">
                                    <field name="charge_date"/>
                                    <field name="cost_type"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Invoice">
                            <group>
                                <field name="invoice_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_trip_management" model="ir.actions.act_window">
        <field name="name">Trip Management</field>
        <field name="res_model">trip.management</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first trip management record
            </p>
        </field>
    </record>
    <record id="view_trip_management_search" model="ir.ui.view">
        <field name="name">trip.management.search</field>
        <field name="model">trip.management</field>
        <field name="arch" type="xml">
            <search string="Search Trips">
                <field name="plate_id" string="Vehicle"/>
                <field name="driver_id"/>
                <field name="project_id"/>
                <!--                <field name="start_time" string="Start Date"/>-->
                <!--                <field name="end_time" string="End Date"/>-->

                <!--                <filter name="filter_today" string="Today"-->
                <!--                        domain="[('start_time', '>=', context_today())]"/>-->
                <!--                <filter name="filter_this_week" string="This Week"-->
                <!--                        domain="[('start_time', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())))]"/>-->

                <group expand="1" string="Group By">
                    <filter name="group_by_vehicle" string="Vehicle" context="{'group_by': 'plate_id'}"/>
                    <filter name="group_by_driver" string="Driver" context="{'group_by': 'driver_id'}"/>
                    <filter name="group_by_project" string="Project" context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <menuitem id="menu_trip_management_root"
              name="Trip Management"
              parent="fleet.menu_root"
              sequence="20"/>

    <record id="action_trip_ticket" model="ir.actions.act_window">
        <field name="name">Trip Tickets</field>
        <field name="res_model">trip.ticket</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_trip_ticket"
              name="Trip Tickets"
              parent="menu_trip_management_root"
              action="action_trip_ticket"/>

    <menuitem id="menu_trip_management"
              name="Trip Records"
              parent="menu_trip_management_root"
              action="action_trip_management"
              sequence="2"/>

</odoo>
