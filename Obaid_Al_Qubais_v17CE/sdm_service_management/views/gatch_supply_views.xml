<odoo>
    <record id="view_form_gatch_supply_sheet" model="ir.ui.view">
        <field name="name">fleet.gatch.supply.form</field>
        <field name="model">fleet.gatch.supply</field>
        <field name="arch" type="xml">
            <form string="Gatch Supply Sheet">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,posted"/>
                    <button name="action_set_done" type="object" string="Mark as Done" class="btn-primary"
                            invisible="state != 'done'"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object"
                        class="btn-primary" invisible="state != 'done'"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="bill_to_id"/>
                            <field name="service_type_id"/>
                            <field name="invoice_for"/>
                            <field name="location"/>
                            <field name="month"/>
                            <field name="invoice_no" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Supply Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="trip_ticket_no"/>
                                    <field name="license_plate"/>
                                    <field name="driver_name"/>
                                    <field name="description"/>
                                    <field name="qty_m3"/>
                                    <field name="part_cost"/>
                                    <field name="total_cost" readonly="1"/>
                                </tree>
                            </field>
                            <group col="4" string="Totals" class="mt16">
                                <field name="total_qty" readonly="1"/>
                                <field name="total_cost" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_gatch_supply_tree" model="ir.ui.view">
        <field name="name">fleet.gatch.supply.tree</field>
        <field name="model">fleet.gatch.supply</field>
        <field name="arch" type="xml">
            <tree string="Gatch Supply Sheets">
                <field name="name"/>
<!--                <field name="date"/>-->
                <field name="bill_to_id"/>
                <field name="service_type_id"/>
                <field name="location"/>
                <field name="total_qty"/>
                <field name="total_cost"/>
                <field name="state"/>
                <field name="done_date"/>
            </tree>
        </field>
    </record>


    <menuitem id="menu_gatch_supply" name="Supply" parent="menu_gatch_service_root"/>

    <record id="action_gatch_supply" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">fleet.gatch.supply</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_gatch_supply_action" name="Manage Supply"
              parent="menu_gatch_supply" action="action_gatch_supply"/>
</odoo>
