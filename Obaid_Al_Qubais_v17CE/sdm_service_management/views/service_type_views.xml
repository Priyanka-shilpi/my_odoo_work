<odoo>
    <record id="view_service_type_form" model="ir.ui.view">
        <field name="name">gatch.service.type.form</field>
        <field name="model">gatch.service.type</field>
        <field name="arch" type="xml">
            <form string="Service Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_service_type_tree" model="ir.ui.view">
        <field name="name">gatch.service.type.tree</field>
        <field name="model">gatch.service.type</field>
        <field name="arch" type="xml">
            <tree string="Service Types">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_gatch_service_root" name="Service Management" parent="fleet.menu_root"/>
    <menuitem id="menu_gatch_service_type" name="Service Types" parent="menu_gatch_service_root"/>

    <record id="action_service_type" model="ir.actions.act_window">
        <field name="name">Service Types</field>
        <field name="res_model">gatch.service.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_gatch_service_type_action" name="Manage Service Types"
              parent="menu_gatch_service_type" action="action_service_type"/>
</odoo>
