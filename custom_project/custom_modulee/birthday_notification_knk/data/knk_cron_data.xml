<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <data noupdate="1">
        <!-- Cron to send birthday wishes to employees -->
        <record id="employee_birthday_notification_cron" model="ir.cron" forcecreate="True">
            <field name="name">Employees: Birthday Wishes Notification</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.send_birthday_notification()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
<!--            <field name="numbercall">-1</field>-->
            <field name="active" eval="True"/>
        </record>


   </data>
</odoo>
