<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_product_image" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
    <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']" position ="before">
                <field name="image_1920" widget="image" class="float-start" options="{'size': [50, 50]}"/>
            </xpath>
        </field>
    </record>
</odoo>




